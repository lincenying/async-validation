{
  "name": "@lincy/async-validation",
  "type": "module",
  "version": "1.0.0",
  "packageManager": "pnpm@8.4.0",
  "description": "async validation rules by LCY",
  "author": "lincenying <lincenying@gmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/lincenying/async-validation#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lincenying/async-validation.git"
  },
  "bugs": {
    "url": "https://github.com/lincenying/async-validation/issues"
  },
  "keywords": [
    "utils"
  ],
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./index.d.ts",
      "require": "./dist/index.cjs",
      "import": "./dist/index.mjs"
    }
  },
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "index.d.ts",
  "files": [
    "dist",
    "*.d.ts"
  ],
  "scripts": {
    "build": "rollup -c",
    "dev": "nr build --watch",
    "lint": "eslint . --ext .ts",
    "prepublishOnly": "npm run build",
    "postpublish": "open https://npmmirror.com/package/@lincy/async-validation",
    "release": "bumpp --commit --push --tag && npm publish --access public",
    "start": "esno src/index.ts",
    "typecheck": "tsc --noEmit",
    "test": "vitest"
  },
  "dependencies": {
    "@lincy/utils": "^0.3.3",
    "async-validator": "^4.2.5"
  },
  "devDependencies": {
    "@antfu/ni": "^0.21.4",
    "@lincy/eslint-config": "^2.1.0",
    "@rollup/plugin-alias": "^5.0.0",
    "@rollup/plugin-commonjs": "^25.0.2",
    "@rollup/plugin-json": "^6.0.0",
    "@rollup/plugin-node-resolve": "^15.1.0",
    "@types/node": "^20.3.3",
    "@types/throttle-debounce": "^5.0.0",
    "bumpp": "^9.1.1",
    "eslint": "^8.44.0",
    "esno": "^0.16.3",
    "rollup": "^3.26.0",
    "rollup-plugin-dts": "^5.3.0",
    "rollup-plugin-esbuild": "^5.0.0",
    "typescript": "^5.1.6",
    "vite": "^4.3.9",
    "vitest": "^0.32.4"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "rollup",
        "postcss",
        "esbuild",
        "terser",
        "prettier"
      ]
    }
  }
}
